" switch between hpp, cpp, tpp
map <F4> :e %:p:s,.hpp$,.X123X,:s,.cpp$,.hpp,:s,.X123X$,.cpp,<CR>
map <F3> :e %:p:s,.hpp$,.X123X,:s,.tpp$,.hpp,:s,.X123X$,.tpp,<CR>

" next/prev tab
map <F6> :tabp<CR>
map <F7> :tabn<CR>

" remove trailing spaces
nnoremap <F5> :let _s=@/<Bar>:%s/\s\+$//e<Bar>:let @/=_s<Bar><CR>

" add tags, navigate with ctrl+] (forward), ctrl+t (back), rerun before usage
set tags+=~/tags

" render tpp as cpp
autocmd BufEnter *.tpp :setlocal filetype=cpp

" encoding
set enc=utf-8
set fenc=utf-8
set termencoding=utf-8

" indent width
set shiftwidth=4
set smartindent
set autoindent
set cindent

" tab width and smarttab
set softtabstop=4
set expandtab
set smarttab

" search highlight all/off
set hlsearch
nnoremap <C-L> :nohlsearch<CR>

" misc
set number " enumerate lines
set showmatch " highlight matching parenthesis
set backspace=indent,eol,start " smart backspace
set undolevels=1000 " undo amount

" misc misc
syntax on
colorscheme elflord
